<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.johncarden.connect3.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/new3x3grid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingBottom="20dp">

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b11"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1">

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingTop="20dp">

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b31"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/blackpiece"
                android:id="@+id/b33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r11"
                android:layout_weight="0.05"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="80dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r12"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r13"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r21"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r22"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r23"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingTop="20dp">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r31"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r32"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/r33"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i11"
                android:layout_weight="0.05"
                android:onClick="clickColumn1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="80dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i12"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i13"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:alpha="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i21"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:onClick="clickColumn1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i22"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i23"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:alpha="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:paddingTop="20dp">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i31"
                android:layout_weight="0.05"
                android:layout_width="80dp"
                android:onClick="clickColumn1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:elevation="1dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i32"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0" />

            <ImageView
                app:srcCompat="@drawable/redpiece"
                android:id="@+id/i33"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:onClick="clickColumn3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:alpha="0" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gameStatus"
        android:alpha="0" />

    <Button
        android:text="Click here to Reset The Game!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetButton"
        android:onClick="clickResetBoard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
